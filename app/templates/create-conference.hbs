{{! app/templates/create-conference.hbs }}
<div class="row justify-content-center">
  <div class="col-md-6">
    <h2>Create a New Conference</h2>
    <form>
      <div class="form-group">
        <label for="name">Conference Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter conference name">
      </div>
      <div class="form-group">
        <label for="date">Conference Start Date</label>
        <input type="date" class="form-control" id="date" placeholder="Enter conference date">
      </div>
      <div class="form-group">
        <label for="date">Conference End Date</label>
        <input type="date" class="form-control" id="date" placeholder="Enter conference date">
      </div>
      <div class="form-group">
        <label for="location">Conference Location</label>
        <input type="text" class="form-control" id="location" placeholder="Enter conference location">
      </div>
      <button type="submit" class="btn btn-primary">Create Conference</button>
    </form>
  </div>
</div>
