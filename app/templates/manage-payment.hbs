<!-- app/templates/manage-payment.hbs -->
<div class="row justify-content-center">
  <div class="col-md-8">
    <h2>Manage Payments</h2>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Amount</th>
          <th>Date</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each this.model.payments as |payment|}}
          <tr>
            <td>{{payment.id}}</td>
            <td>{{payment.amount}}</td>
            <td>{{payment.date}}</td>
            <td>{{payment.status}}</td>
            <td>
              <button class="btn btn-primary">Edit</button>
              <button class="btn btn-danger">Delete</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
