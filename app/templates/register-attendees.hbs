{{! app/templates/register-attendees.hbs }}
<div class="row justify-content-center">
  <div class="col-md-8">
    <h2>Register Attendees</h2>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" class="form-control" placeholder="Enter name">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" class="form-control" placeholder="Enter email">
      </div>
      <div class="form-group">
        <label for="phone">Phone</label>
        <input type="tel" id="phone" class="form-control" placeholder="Enter phone number">
      </div>
      <div class="form-group">
        <label for="conference">Conference</label>
        <input type="text" id="conference" class="form-control" placeholder="Enter conference name">
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </div>
</div>
