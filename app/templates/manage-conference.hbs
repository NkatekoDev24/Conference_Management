{{! app/templates/manage-conferences.hbs }}
<div class="row justify-content-center">
  <div class="col-md-8">
    <h2>Manage Conferences</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Date</th>
          <th>Location</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each @model as |conference|}}
          <tr>
            <td>{{conference.name}}</td>
            <td>{{conference.date}}</td>
            <td>{{conference.location}}</td>
            <td>
              <LinkTo @route="manage-conference" conference.id class="btn btn-primary btn-sm">Edit</LinkTo>
              <LinkTo @route="manage-conference" conference.id class="btn btn-danger btn-sm">Delete</LinkTo>
            </td>
          </tr>
        {{else}}
          <tr>
            <td colspan="4" class="text-center">No conferences found.</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
